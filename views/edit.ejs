<%- include('header') %>

<div class="ui grid">
	<div class="four wide column">
		<a href="avatar" href="/posts?author=<%= user._id %>" data-title="<%= user.name %>|<%= ({m:'male', f:'female', x:'secret'})[user.gender]%>" data-content="<%= user.bio %>">
			<img class="avatar" src="/img/<%= user.avatar %>"></img>
		</a>
	</div>
	<div class="eight wide column">
		<form class="ui form segment" method="post" action="/posts/<%= post._id %>/edit">
			<div class="field required">
				<label>Title</label>
				<input type="text" name="title" value="<%= post.title %>">
			</div>
			<div class="field required">
				<label>Content</label>
				<textarea name="content" rows="15"><%= post.content %></textarea>
			</div>
			<input type="submit" class="ui button" value="published">
		</form>
	</div>
</div>

<%- include('footer') %>